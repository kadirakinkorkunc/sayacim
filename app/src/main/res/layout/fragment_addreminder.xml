<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/frag_rel_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/tvYeniHatirlaticiActionBar"
            android:layout_width="337dp"
            android:layout_height="61dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:background="@drawable/ic_hatirlatici_baslik"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etYeniHatirlaticiBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYeniHatirlaticiActionBar"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50px"
            android:layout_marginTop="27dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="başlık"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etYeniHatirlaticiAciklama"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etYeniHatirlaticiBaslik"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="açıklama"
            android:textAlignment="textStart" />


        <Button
            android:id="@+id/btnYeniHatirlaticiDatePicker"
            android:layout_width="73dp"
            android:layout_height="83dp"
            android:layout_below="@id/etYeniHatirlaticiAciklama"
            android:layout_alignParentStart="true"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="100px"
            android:layout_marginTop="38dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_calendar" />

        <Button
            android:id="@+id/btnYeniHatirlaticiTimePicker"
            android:layout_width="73dp"
            android:layout_height="83dp"
            android:layout_below="@id/etYeniHatirlaticiAciklama"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="600px"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="74dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/btnYeniHatirlaticiDatePicker"
            android:background="@drawable/ic_clock" />

        <TextView
            android:id="@+id/tvTarih"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/btnYeniHatirlaticiDatePicker"
            android:layout_alignParentStart="true"
            android:layout_marginStart="91px"
            android:layout_marginTop="15dp"
            android:hint="date"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSaat"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/btnYeniHatirlaticiTimePicker"
            android:layout_marginStart="147dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="250px"
            android:layout_toEndOf="@+id/tvTarih"
            android:hint="time"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:id="@+id/single_item_id"
            />


        <Button
            android:background="@drawable/ic_savereminder"
            android:id="@+id/btnYeniHatirlaticiEkle"
            android:layout_width="73dp"
            android:layout_height="84dp"
            android:layout_below="@+id/tvTarih"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="179dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>